# =============================================================================
# MCP Server Configuration
# =============================================================================
# Copy this file to .env and update the values as needed.
# DO NOT commit .env to version control - it may contain API keys!
# =============================================================================

# -----------------------------------------------------------------------------
# Server Settings
# -----------------------------------------------------------------------------

# Port the MCP server listens on (default: 3001)
PORT=3001

# Host to bind to (default: localhost)
HOST=localhost

# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Search Provider Configuration
# -----------------------------------------------------------------------------

# Search provider to use: "duckduckgo" or "serper" (default: duckduckgo)
# - duckduckgo: Free, no API key required, but may have rate limits
# - serper: Requires API key, more reliable results
SEARCH_PROVIDER=duckduckgo

# Serper API Key (required only if SEARCH_PROVIDER=serper)
# Get your API key at: https://serper.dev/
# SERPER_API_KEY=your_serper_api_key_here

# Maximum number of search results to return (default: 5)
MAX_SEARCH_RESULTS=5

# Search request timeout in milliseconds (default: 10000)
SEARCH_TIMEOUT_MS=10000

# -----------------------------------------------------------------------------
# Page Fetch Configuration
# -----------------------------------------------------------------------------

# Maximum page content size in characters (default: 50000)
MAX_PAGE_SIZE=50000

# Page fetch timeout in milliseconds (default: 15000)
FETCH_TIMEOUT_MS=15000

# User agent string for HTTP requests (default: ResearchCopilot/1.0)
USER_AGENT=ResearchCopilot/1.0

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# SQLite database path for notes storage (default: ./data/notes.db)
DB_PATH=./data/notes.db

# -----------------------------------------------------------------------------
# Rate Limiting (requests per minute per category)
# -----------------------------------------------------------------------------

# Web search rate limit (default: 10)
RATE_LIMIT_SEARCH=10

# Page fetch rate limit (default: 30)
RATE_LIMIT_FETCH=30

# Notes operations rate limit (default: 50)
RATE_LIMIT_NOTES=50
