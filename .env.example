# Research Copilot Configuration
# Copy this file to .env and customize as needed
# All values shown are defaults - uncomment and modify as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment mode: development | production | test
APP_ENV=development

# Logging level: debug | info | warn | error
LOG_LEVEL=info

# Log format: json | pretty
LOG_FORMAT=pretty

# ============================================
# STREAMLIT CONFIGURATION
# ============================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================

# Ollama API base URL
OLLAMA_BASE_URL=http://localhost:11434

# Default model to use (must be installed in Ollama)
OLLAMA_DEFAULT_MODEL=ministral-3:8b

# Request timeout in milliseconds (default: 2 minutes for complex queries)
OLLAMA_TIMEOUT_MS=120000

# Maximum retry attempts for failed requests
OLLAMA_MAX_RETRIES=3

# LLM temperature (0.0-1.0)
# Lower = more focused/deterministic, Higher = more creative/varied
OLLAMA_TEMPERATURE=0.4

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================

# MCP server URL (Node.js server in mcp_server/ directory)
MCP_SERVER_URL=http://localhost:3001

# MCP server request timeout in milliseconds
MCP_SERVER_TIMEOUT_MS=30000

# =============================================================================
# SEARCH CONFIGURATION
# =============================================================================

# Search provider: duckduckgo | serper
SEARCH_PROVIDER=duckduckgo

# API key for Serper.dev (required only if SEARCH_PROVIDER=serper)
# Get your key at: https://serper.dev
SEARCH_API_KEY=

# Maximum search results to return
SEARCH_MAX_RESULTS=5

# Search request timeout in milliseconds
SEARCH_TIMEOUT_MS=30000

# =============================================================================
# FETCH CONFIGURATION
# =============================================================================

# Maximum page content size in characters
FETCH_MAX_PAGE_SIZE=50000

# Page fetch timeout in milliseconds
FETCH_TIMEOUT_MS=30000

# User agent string for HTTP requests
FETCH_USER_AGENT=ResearchCopilot/1.0

# =============================================================================
# NOTES STORAGE
# =============================================================================

# SQLite database path for saved notes
NOTES_DB_PATH=./data/notes.db

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable tool execution trace display
ENABLE_TOOL_TRACE=true

# Enable note saving functionality
ENABLE_NOTE_SAVING=true

# Enable deep dive research mode
ENABLE_DEEP_DIVE_MODE=true

# =============================================================================
# DEVELOPMENT OPTIONS
# =============================================================================

# Use mock search results (for testing without internet)
DEV_MOCK_SEARCH=false

# Use mock page fetches (for testing without internet)
DEV_MOCK_FETCH=false
